.container{
    padding: 30rpx;
    box-sizing: border-box;
    background-color: #ffffff;
}
.sku-preview{
    display: flex;
    flex-direction: row;
}
.sku-img{
    width: 160rpx;
    height: 160rpx;
}
.sku-description{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}
.sku-pending{
    font-size: 24rpx;
}
.sku-pending-tig{
    color:#999999;
}
.sku-pending-tigValue{
    color: #666666;
}
.discount-price{
    margin-left: 20rpx;
}
.price-row{
    display: flex;
    flex-direction: row;
    align-items: baseline;
}
.hr{
    width: 690rpx;
    height: 2rpx;
    background-color: #E9E9E9;
    margin-top: 30rpx;
}
.stock{
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999;
}
.stock-pinch{
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #D20109;
}