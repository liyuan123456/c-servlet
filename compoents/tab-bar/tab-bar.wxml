<view class="container">
    <view class="icons">
        <view bind:tap="onGoToHome">
                <l-icon size="46" name="home" l-class="sleeve" color="#157658"></l-icon>
            <text>首页</text>
        </view>
        <view bind:tap="onGoToCart">
            <l-badge>
                <l-icon size="46" name="mcart" l-class="sleeve" color="#157658"></l-icon>
            </l-badge>
            <text>购物车</text>
        </view>
    </view>
    <view bind:tap="onAddToCart" class="cart btn-font">
        <text>加入购物车</text>
    </view>
    <view bind:tap="onBuy" class="buy btn-font">
        <text>立即购买</text>
    </view>
</view>